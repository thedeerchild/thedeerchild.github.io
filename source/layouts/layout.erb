<!doctype html>
<html>
  <head>
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta charset="utf-8">
    <meta content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" name="viewport">

    <meta property="og:title" content="<%= current_page.data.title || 'thedeerchild' %>">
    <meta property="og:description" content="An engineer with a passion for product, data and design.">
    <meta property="og:image" content="http://thedeerchild.com/images/meta/social.jpg">
    <meta property="og:url" content="http://thedeerchild.com">
    <meta name="twitter:card" content="summary_large_image">
    <meta name="og:site_name" content="thedeerchild">
    <meta name="twitter:image:alt" content="thedeerchild (Eric Morris)">

    <title><%= current_page.data.title || 'thedeerchild' %></title>

    <%= stylesheet_link_tag :site %>
  </head>

  <body class="<%= page_classes %>">
    <%= yield %>
    <%= javascript_include_tag :all %>
  </body>
</html>
